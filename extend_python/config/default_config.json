      },
      "mesh_optimizer": {
        "enabled": false,
        "executable_path": "",
        "command_line_args": ""
      }
    }
  },
  
  "advanced": {
    "experimental_features": {
      "ai_asset_classification": false,
      "predictive_import_rules": false,
      "automatic_lod_generation": false,
      "smart_material_assignment": false
    },
    "debug_settings": {
      "enable_debug_mode": false,
      "verbose_logging": false,
      "save_intermediate_files": false,
      "profile_performance": false
    },
    "custom_scripts": {
      "pre_import_script": "",
      "post_import_script": "",
      "batch_completion_script": "",
      "error_handling_script": ""
    }
  }
}
